general {
        output_format = "i3bar"
        colors = true
        interval = 5
	#color_good = "#7ED693"
	#color_good = "#6CC5D9"
	color_good = "#19A5EE"
	color_degraded = "#E0D99D"
	color_bad = "#FF6969"
}

#color_good = "#9BD5D1"

order += "disk /home"
order += "wireless wlp2s0"
order += "ethernet enp1s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "load"
order += "tztime local"


wireless wlp2s0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp1s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining"
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%5min"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

disk "/home" {
        format = "%free"
}


